@model List<ServiceRequest>

@{
    ViewData["Title"] = "Service Request Status";
}

<div class="header">
    <h2>Service Request Status</h2>
</div>

<div class="container">
    <div class="d-flex justify-content-between mt-3">
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Main Menu</a>
    </div>

    <!-- Table displaying all service requests -->
    @if (Model != null && Model.Any())
    {
        <div class="search-section mt-4">
            <h4>Existing Service Requests</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Description</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model)
                    {
                        <tr class="request-card">
                            <td>@request.Id</td>
                            <td>@request.Description</td>
                            <td>@request.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>No service requests found.</p>
    }

    <!-- Containers for tracking and graph traversal -->
    <div class="d-flex align-items-start mt-4 gap-3">
        <!-- Track Service Request Container -->
        <div class="track-section flex-half">
            <h4>Track a Service Request</h4>
            <form asp-controller="ServiceRequest" asp-action="TrackRequest" method="post" class="form-inline">
                <label for="id" class="mr-2">Service Request ID:</label>
                <input type="number" id="id" name="id" class="form-control ml-2" required min="1" />
                <button type="submit" class="btn btn-primary mt-3 ml-2">Track</button>
            </form>

            @if (ViewBag.Message != null)
            {
                <p class="message mt-3">@ViewBag.Message</p>

                @if (ViewBag.RelatedRequests is List<ServiceRequest> relatedRequests && relatedRequests.Count > 0)
                {
                    <div class="related-section mt-4">
                        <h4>Related Service Requests:</h4>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var relatedRequest in relatedRequests)
                                {
                                    <tr>
                                        <td>@relatedRequest.Id</td>
                                        <td>@relatedRequest.Description</td>
                                        <td>@relatedRequest.Status</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }

            }
        </div>

        <!-- Graph Traversal Container -->
        <div class="graph-traversal-section flex-half">
            <h4>Graph Traversal</h4>
            <form asp-controller="ServiceRequest" asp-action="GraphTraversal" method="get" class="form-inline">
                <label for="startId" class="mr-2">Start ID for Traversal:</label>
                <input type="number" id="startId" name="startId" class="form-control ml-2" required min="1" />
                <button type="submit" class="btn btn-primary mt-3 ml-2">Traverse Graph</button>
            </form>

            @if (ViewBag.TraversalResult is List<ServiceRequest> traversalResult && traversalResult.Count > 0)
            {
                <div class="traversal-result-section mt-4">
                    <h4>Graph Traversal Result:</h4>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Description</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var node in traversalResult)
                            {
                                <tr>
                                    <td>@node.Id</td>
                                    <td>@node.Description</td>
                                    <td>@node.Status</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f1f1f1;
        color: #333;
    }

    .header {
        background-color: #28a745;
        border: 2px solid #28a745;
        padding: 10px 20px;
        text-align: center;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        width: 100%;
        box-sizing: border-box;
        color: white;
    }

    .container {
        padding: 20px;
        margin-top: 80px;
    }

    .btn-secondary {
        background-color: #28a745;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        transition: background-color 0.3s ease-in-out;
    }

        .btn-secondary:hover {
            background-color: #218838;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        .table th, .table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table tr:hover {
            background-color: #e9f5eb;
            transform: scale(1.01);
        }

    .form-inline label {
        font-weight: bold;
    }

    .form-inline input, .form-inline button {
        padding: 10px;
        margin: 5px 0;
        font-size: 1em;
    }

    .form-inline button {
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .form-inline button:hover {
            background-color: #218838;
        }

    .message {
        font-weight: bold;
        margin-top: 20px;
        color: #155724;
    }

    .search-section, .track-section, .related-section, .graph-traversal-section, .traversal-result-section {
        padding: 20px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        .search-section h4, .track-section h4, .related-section h4, .graph-traversal-section h4, .traversal-result-section h4 {
            font-weight: bold;
            text-align: center;
        }

    ul {
        list-style-type: none;
        padding-left: 0;
    }

    li {
        padding: 5px 0;
    }

    .d-flex {
        display: flex;
    }

    .flex-half {
        flex: 1;
        margin: 0 10px; 
    }
</style>
