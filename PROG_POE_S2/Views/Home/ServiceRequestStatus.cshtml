@{
    ViewData["Title"] = "Service Request Status";
}
<div class="header">
    <h2>Service Request Status</h2>
</div>

<div class="centered-content">
    <div class="menu-container">
        <a href="@Url.Action("Index", "Home")" class="btn btn-service-request">Back to Main Menu</a>
    </div>
</div>

<style>
    body {
        background-color: #f0f0f0;
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .header {
        background-color: #4caf50;
        border: 2px solid #4caf50;
        padding: 10px 20px;
        text-align: center;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        width: 100%;
        box-sizing: border-box;
    }

    .centered-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        color: #333;
        text-align: center;
        margin-top: 60px;
    }

    .menu-container {
        background-color: #ffffff;
        border: 2px solid #4caf50;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.2);
        text-align: center;
        color: #333;
        transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease, color 0.3s ease;
        position: relative;
    }

        .menu-container:hover {
            transform: scale(1.05);
            box-shadow: 0px 6px 20px #4caf50 (0, 0, 0, 0.5);
            background-color: #ffffff;
            color: #4caf50;
        }

    h2 {
        margin-bottom: 20px;
        font-size: 2.5em;
    }

    .btn-service-request {
        background-color: #4caf50;
        border-color: #4caf50;
        color: white;
        padding: 10px 20px;
        font-size: 1.1em;
        text-decoration: none;
        border-radius: 5px;
        display: inline-block;
    }

        .btn-service-request:hover {
            background-color: #388e3c;
            border-color: #388e3c;
        }

</style>
