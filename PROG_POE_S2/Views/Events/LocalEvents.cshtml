@model PROG_POE_S2.Models.LocalEventsViewModel

@{
    ViewData["Title"] = "Local Events";
}

<div class="header">
    <h2>Local Events and Announcements</h2>
</div>

<div class="container">
    <div class="d-flex justify-content-between">
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-3">Back to Main Menu</a>
    </div>

    <div class="search-section mt-4">
        <h4>Search Events</h4>
        <form method="get" action="@Url.Action("SearchEvents", "Events")" class="form-inline">
            <div class="form-group mr-3">
                <label for="category">Category:</label>
                <select id="category" name="category" class="form-control ml-2">
                    <option value="all">All Categories</option>
                    <option value="sports">Sports</option>
                    <option value="music">Music</option>
                    <option value="education">Education</option>
                    <option value="community">Community</option>
                </select>
            </div>
            <div class="form-group mr-3">
                <label for="date">Date:</label>
                <input type="date" id="date" name="date" class="form-control ml-2">
            </div>
            <button type="submit" class="btn btn-primary mt-3 ml-2">Search</button>
        </form>
    </div>

    <div class="d-flex justify-content-between mt-5">
        <div class="events-section" style="flex: 1; margin-right: 20px;">
            <h4>Upcoming Events</h4>
            <div class="events-list">
                @if (Model.Events != null && Model.Events.Any())
                {
                    @foreach (var eventItem in Model.Events)
                    {
                        <div class="event-card mb-3">
                            <i class="bi bi-calendar-event event-icon"></i>
                            <h5>@eventItem.Title <span class="badge badge-primary">@eventItem.Category</span></h5>
                            <p>@eventItem.Description</p>
                            <p><strong>Date:</strong> @eventItem.Date.ToString("dd MMM yyyy")</p>
                        </div>
                    }
                }
                else
                {
                    <p>No upcoming events found.</p>
                }
            </div>
        </div>

        <div class="calendar-section" style="flex: 1;">
            <h4>Event Calendar</h4>
            <div id="calendar"></div>
        </div>
    </div>

    <div class="recommendations-section mt-5">
        <h4>Recommended Events</h4>
        <div class="recommendation-list">
            @if (Model.RecommendedEvents != null && Model.RecommendedEvents.Any())
            {
                @foreach (var recommendation in Model.RecommendedEvents)
                {
                    <div class="recommendation-card mb-3">
                        <i class="bi bi-star-fill recommendation-icon"></i>
                        <h5>@recommendation.Title <span class="badge badge-warning">@recommendation.Category</span></h5>
                        <p>@recommendation.Description</p>
                        <p><strong>Date:</strong> @recommendation.Date.ToString("dd MMM yyyy")</p>
                    </div>
                }
            }
            else
            {
                <p>No recommended events at the moment.</p>
            }
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f1f1f1;
        color: #333;
    }

    .header {
        background-color: #007bff;
        border: 2px solid #007bff;
        padding: 10px 20px;
        text-align: center;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        width: 100%;
        box-sizing: border-box;
    }

    .search-section, .events-section, .recommendations-section, .calendar-section {
        margin-bottom: 20px;
        padding: 30px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .event-card, .recommendation-card {
        padding: 15px;
        border: 1px solid #007bff;
        border-radius: 8px;
        background-color: #f8f9fa;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease, transform 0.3s ease;
        position: relative;
    }

    .event-icon, .recommendation-icon {
        position: absolute;
        top: 15px;
        left: 15px;
        font-size: 24px;
        color: #007bff;
    }

    .event-card h5, .recommendation-card h5 {
        color: #007bff;
        margin-left: 45px;
    }

    .event-card:hover, .recommendation-card:hover {
        box-shadow: 0 0 15px rgba(0, 63, 127, 0.6);
        transform: scale(1.02);
        background-color: #f1f1f1;
    }

    .badge {
        margin-left: 10px;
    }

    .container {
        padding: 20px;
    }

    button.btn {
        transition: background-color 0.3s;
    }

        button.btn:hover {
            background-color: #0056b3;
        }

    #calendar {
        width: 100%;
        height: 400px;
        border: 1px solid #007bff;
        border-radius: 8px;
        background-color: #f8f9fa;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.css" rel="stylesheet" />

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            events: [
    @foreach (var eventItem in Model.Events)
    {
        @:{ title: '@eventItem.Title', date: '@eventItem.Date.ToString("yyyy-MM-dd")' },
    }
                ]
        });
        calendar.render();
    });
</script>
