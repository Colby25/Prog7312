@model PROG_POE_S2.Models.LocalEventsViewModel

@{
    ViewData["Title"] = "Local Events";
}

<div class="header">
    <h2>Local Events and Announcements</h2>
</div>

<div class="container">
    <div class="d-flex justify-content-between">
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-3">Back to Main Menu</a>
    </div>

    <div class="search-section mt-4">
        <h4>Search Events</h4>
        <form method="get" action="@Url.Action("SearchEvents", "Events")" class="form-inline">
            <div class="form-group mr-3">
                <label for="category">Category:</label>
                <select id="category" name="category" class="form-control ml-2">
                    <option value="all">All Categories</option>
                    <option value="sports">Sports</option>
                    <option value="festival">Festival</option>
                    <option value="education">Education</option>
                    <option value="community">Community</option>
                </select>
            </div>
            <div class="form-group mr-3">
                <label for="date">Date:</label>
                <input type="date" id="date" name="date" class="form-control ml-2">
            </div>
            <button type="submit" class="btn btn-primary mt-3 ml-2">Search</button>
        </form>
    </div>

    <div class="d-flex justify-content-between mt-5">
        <div class="events-section" style="flex: 1; margin-right: 20px;">
            <h4>Upcoming Events</h4>
            <div class="events-list scrollable-section">
                @if (Model.Events != null && Model.Events.Any())
                {
                    @foreach (var eventItem in Model.Events)
                    {
                        <div class="event-card mb-3">
                            <h5>@eventItem.Title</h5>
                            <p>@eventItem.Description</p>
                            <p><strong>Date:</strong> @eventItem.Date.ToString("dd MMM yyyy")</p>
                        </div>
                    }
                }
                else
                {
                    <p>No upcoming events found.</p>
                }
            </div>
        </div>

        <div class="calendar-section" style="flex: 1;">
            <h4>Event Calendar</h4>
            <div id="calendar"></div>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-5">
        <div class="recommendations-section" style="flex: 1; margin-right: 20px;">
            <h4>Recommended Events</h4>
            <div class="recommendation-list scrollable-section">
                @if (Model.RecommendedEvents != null && Model.RecommendedEvents.Any())
                {
                    @foreach (var recommendation in Model.RecommendedEvents)
                    {
                        <div class="recommendation-card mb-3">
                            <h5>@recommendation.Title</h5>
                            <p>@recommendation.Description</p>
                            <p><strong>Date:</strong> @recommendation.Date.ToString("dd MMM yyyy")</p>
                        </div>
                    }
                }
                else
                {
                    <p>No recommended events at the moment.</p>
                }
            </div>
        </div>

    </div>
</div>

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f1f1f1;
        color: #333;
    }

    .header {
        background-color: #007bff;
        border: 2px solid #007bff;
        padding: 10px 20px;
        text-align: center;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        width: 100%;
        box-sizing: border-box;
    }

    .search-section, .events-section, .recommendations-section, .calendar-section, .most-searched-section {
        margin-bottom: 20px;
        padding: 30px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        .events-section h4, .calendar-section h4, .recommendations-section h4, .most-searched-section h4 {
            font-weight: bold;
            text-align: center;
        }

        .search-section h4 {
            font-weight: bold;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .event-card, .recommendation-card, .most-searched-card {
        padding: 20px 10px 10px 20px;
        margin: 10px;
        border: 1px solid #007bff;
        border-radius: 8px;
        background-color: #f8f9fa;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.4s ease, transform 0.4s ease;
        max-width: 95%;
    }

        .event-card h5, .recommendation-card h5, .most-searched-card h5 {
            color: #0056b3;
        }

        .event-card:hover, .recommendation-card:hover, .most-searched-card:hover {
            box-shadow: 0 0 30px rgba(0, 63, 127, 0.9);
            transform: scale(1.01);
            background-color: #bbdefb;
        }

    .container {
        padding: 20px;
    }

    button.btn {
        transition: background-color 0.3s;
    }

        button.btn:hover {
            background-color: #0056b3;
        }

    #calendar {
        width: 100%;
        height: 95%; 
        border: 1px solid #007bff;
        border-radius: 8px;
        background-color: #f8f9fa;
        transition: box-shadow 0.4s ease, transform 0.4s ease;
    }

        #calendar:hover {
            box-shadow: 0 0 30px rgba(0, 63, 127, 0.9);
            transform: scale(1.01);
        }

    .scrollable-section {
        max-height: 475px;
        overflow-y: auto;
    }
</style>
<!-- reference: FullCalendar. (n.d.). FullCalendar Documentation. Retrieved from https://fullcalendar.io/docs -->
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.css" rel="stylesheet" />

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            events: [
    @foreach (var eventItem in Model.Events)
    {
        @:{ title: '@eventItem.Title', date: '@eventItem.Date.ToString("yyyy-MM-dd")' },
    }
                ]
        });
        calendar.render();
    });
</script>
